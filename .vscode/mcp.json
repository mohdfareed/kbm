{
  "servers": {
    "kbm-memories": {
      "type": "stdio",
      "command": "./scripts/run.sh",
      "args": [
        "start"
      ],
    },
    "kbm-dev": {
      "type": "stdio",
      "command": "./scripts/run.sh",
      "args": [
        "start",
        "kbm-dev"
      ],
      "dev": {
        "watch": [
          "src/**/*.py",
          ".kbm/memories/kbm-dev/config.yaml"
        ],
        "debug": {
          "type": "debugpy"
        }
      },
    }
  },
  "inputs": []
}
